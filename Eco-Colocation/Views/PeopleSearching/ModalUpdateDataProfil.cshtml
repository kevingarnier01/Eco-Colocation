
@{
	ViewBag.Title = "ModalUpdateDataProfil";
}

<div class="underModal col-sm-12 col-xs-12">
	<div id="modalUpdatePeopleSearch" class="reelModal">
		<div class="titleForm-mcar">Modifier mes informations personnelles</div>
		@* Affiche ce bouton ci-desous que si l'annonce n'est pas desactivé.
			Sinon si elle l'est, alors le bouton de fin est modifier par => "mettre à jour" *@
		<div class="flex">
			<a href="@Url.Action("", "", null)" class="btnGreen flex childFlex" id="btnDisableProfilInterested">Désactiver mon intérêt de recherche</a>
		</div>
		<div id="updatePeopleSearch">
			@Html.Partial("~/Views/Account/CARecherche.cshtml")
		</div>
		<div class="flex">
			<a href="@Url.Action("Index", "Home", null)" class="btnGreen flex childFlex">Mettre à jour</a>
		</div>
		@* Afficher cela ci-dessous que si l'annonce n'est pas activé *@
		@*<div class="flex childFlex btnGreen">Mettre à jour</div>*@
	</div>
	<div class="divCloseModal">
		<a href="#close-modal" rel="modal:close"><i class="fas fa-times close-modal"></i></a>
	</div>
</div>

<script language="javascript">
	$(document).ready(function () {
		window.history.replaceState('data to be passed', 'Title of the page',
			'/Modal/ModalUpdateDataProfil/?idModal=' + @ViewData["idModal"] + "&targetCity=" + "@ViewData["targetCity"]");
		$('#updatePeopleSearch .titleForm-mcar').css('display', 'none');
		$('#divInscriptionButtons-mcar').css('display', 'none')
		@* Changer le bouton "Desactiver mon intéret" si l'annonce est déja désactivé. Voir si dessous*@
		//$('#updatePeopleSearch #divInscriptionButtons-mcar').css('display', 'none');
	});
</script>
