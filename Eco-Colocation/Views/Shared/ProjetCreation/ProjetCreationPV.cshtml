		<div id="div1-1PC">
			<div id="div2PC" class="fontFamilyNote">
				<div id="div1ProfilPC" class="col-sm-4">
					<div id="divIdentitePC" class="col-sm-12 col-xs-6">
						<div id="divPhotoProfilPC" class="col-sm-5 col-xs-5">
							<div id="photoProfilPC"></div>
						</div>
						<div id="div0DecriptionIdentitePC">
