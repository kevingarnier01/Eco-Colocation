@model  Eco_Colocation.ViewModel.AllViewModel
@{
	ViewBag.Title = "PasswordDiv";
}

<div class="divEncadrer-mcar" id="passwordDiv">
	<div class="encadrer-mcar col-sm-11 col-xs-12">
		<div class="col-sm-4 divLeftSideEncadrer-mcar divImgLogo-mcar">
			<div class="divImgLogoHorizontal-mcar">
				<div class="divImgLogoVertical-mcar">
					<i class="fas fa-key icon-ca"></i>
				</div>
			</div>
		</div>
		<div class="col-sm-8 divRightSideEncadrer-mcar" id="contenuPasswordDiv">
			<div id="divGlobalMsgPhoto-mcar">
				<i class="fas fa-info" id="iconMsgPhoto-mcar"></i>
				<div>
					<p id="msgMdpInfo-pd">Votre mot de passe doit contenir entre 8 et 20 caractères, et comporter des lettres et des chiffres.</p>
				</div>
			</div>
			<div class="flex">
				<div class="childFlex">
					@Html.ValidationMessageFor(m => m.AccountVM.UserBo.UserName)
					@Html.ValidationMessageFor(m => m.AccountVM.UserBo.Password)
					@Html.ValidationMessageFor(m => m.AccountVM.UserBo.PasswordConfirm)
				</div>
			</div>
			<div class="divPassw">
				<div class="underDivPassw">
					<div class="childFlex">
						<label class="lbl-mcar">Utilisateur</label>
						@Html.TextBoxFor(m => m.AccountVM.UserBo.UserName, new { @id = "UserNameInpt-pd", @type = "email", @placeholder = "Votre adresse email", @class = "input-mcar" })
						<div class="lineinput-mcar"></div>
					</div>
				</div>
				<div class="underDivPassw">
					<label class="lbl-mcar">Mot de passe</label>
					@Html.TextBoxFor(m => m.AccountVM.UserBo.Password, new { @type = "password", @placeholder = "Entrez un mot de passe", @class = "input-mcar" })
					<div class="lineinput-mcar"></div>
				</div>
				<div class="underDivPassw">
					<label class="lbl-mcar">Mot de passe</label>
					@Html.TextBoxFor(m => m.AccountVM.UserBo.PasswordConfirm, new { @type = "password", @placeholder = "Confirmez le mot de passe", @class = "input-mcar" })
					<div class="lineinput-mcar"></div>
				</div>
			</div>
		</div>
	</div>
</div>