@model Eco_Colocation.BO.UserBo
@{
	ViewBag.Title = "ButtonsCreateAccount";
}
<p class="underTitle centerText" id="titleFinishCreateAnnonce">Finaliser l'opération avec Eco-Colocation.fr</p>
<div class="flex">
	<div id="divbtnCreate-mbca" class="childFlex">
		<div class="div2InscriptionBtn-mcar" id="div2InscriptionBtnMail-mcar" onclick="openDivElement('#createProfilWindow')">
			<i class="iconInscriptionBtn-mcar fas fa-user-circle"></i>
			<p class="textInscriptionBtn-mcar">Finaliser l'opération en s'inscrivant</p>
		</div>
		<div id="createProfilWindow">
			<div id="divCreateProfil-mcar">
				<div class="flex">
					<div class="col-xs-10 sousDivCreateProfil-mcar">
						<label class="lbl-mcar">Utilisateur</label>
						@Html.TextBoxFor(m => m.Email, new { @id = "emailInp-bca", @type = "email", @placeholder = "Votre adresse email...", @class = "input-mcar", @disabled = "disabled" })
					</div>
				</div>
				<div class="flex">
					<div class="col-xs-10 sousDivCreateProfil-mcar">
						<label class="lbl-mcar">Mot de passe</label>
						@Html.TextBoxFor(m => m.webpages_MembershipBo.Password, new { @type = "password", @placeholder = "Entrez un mot de passe", @class = "input-mcar" })
						<div class="lineinput-mcar"></div>
					</div>
				</div>
				<div class="flex">
					<div class="col-xs-10 sousDivCreateProfil-mcar">
						<label class="lbl-mcar">Mot de passe</label>
						@Html.TextBoxFor(m => m.webpages_MembershipBo.PasswordConfirm, new { @type = "password", @placeholder = "Confirmez le mot de passe", @class = "input-mcar" })
						<div class="lineinput-mcar"></div>
					</div>
				</div>
				<div class="col-xs-12" id="divBtnCreateProfil-mcar">
					<div id="btnCreateProfil-mcar">Valider</div>
				</div>
			</div>
		</div>
		<div class="childFlex">
			<div class="div2InscriptionBtn-mcar" id="div2ConnectionWithAccount-mcar" onclick="openDivElement('#connectProfilWindow')">
				<i class="iconInscriptionBtnByAccount-mcar fas fa-sign-in-alt"></i>
				<p class="textInscriptionBtnByAccount-mcar">Finaliser l'opération en se connectant</p>
			</div>
			<div id="connectProfilWindow">
				<div id="divCreateProfil-mcar" class="divAccountInscription-bca"></div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$("#div2CreateAccount-acc").remove();

	$(".divAccountInscription-bca").load("/Account/ModalAccount #account");
</script>